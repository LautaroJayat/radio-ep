<script>
    var snippet = document.getElementsByClassName('snippet');
    for (let i = 0; i < snippet.length; i++) {
        snippet[i].addEventListener('click', () => {
            let url = snippet[i].getAttribute('original-url');
            fetch("/contents/iframe/column/" + url).then((response) => { return response.json() }).
                then(data => {
                    snippet[i].lastElementChild.innerHTML = data.data
                });
            snippet[i].firstElementChild.style.display = 'none';
            snippet[i].lastElementChild.style.display = 'block';
        });
    }

    var emitionSnippet = document.getElementsByClassName('emition-snippet');
    for (let i = 0; i < emitionSnippet.length; i++) {
        emitionSnippet[i].addEventListener('click', () => {
            let url = emitionSnippet[i].getAttribute('original-url');
            fetch("/contents/iframe/emition/" + url).then((response) => { return response.json() }).
                then(data => {
                    emitionSnippet[i].lastElementChild.innerHTML = data.data
                });
            emitionSnippet[i].firstElementChild.style.display = 'none';
            emitionSnippet[i].lastElementChild.style.display = 'block';
        });
    }

</script>